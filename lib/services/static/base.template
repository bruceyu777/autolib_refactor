<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FortiOS Release QA Automation</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/themes/prism.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/plugins/line-numbers/prism-line-numbers.min.css" rel="stylesheet" />
    <link href="data:text/plain;base64," rel="icon" type="image/x-icon">
    <style>
        /* General Reset */
        body, h2, ul, li, a {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            height: 100vh; /* Full height */
            background-color: #f5f6f8;
            overflow: hidden; /* Prevent body overflow */
        }

        .content {
            max-width: 1200px; /* Max content width */
            width: calc(100% - 200px); /* Adjust width to account for the sidebar */
            margin: 0 auto; /* Center the content */
            padding: 20px;
            box-sizing: border-box;
            overflow-y: auto; /* Allow vertical scrolling */
            margin-top: 5px; /* Space from the top */
            padding-bottom: 60px; /* Space for footer */
        }

        .sidebar {
            position: fixed;
            left: -200px; /* Start hidden */
            top: 0;
            width: 200px;
            height: 100vh;
            background-color: #ffffff;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            border-right: 1px solid #e1e4e8;
            z-index: 1000;
            transition: left 0.3s ease, width 0.3s ease;
        }

        .sidebar:hover {
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            height: 100vh;
            z-index: 100;
        }

        .sidebar:hover + .sidebar {
            left: 0;
        }

        .sidebar h2 {
            margin-bottom: 15px;
            font-size: 24px;
            font-weight: 400;
            color: #333;
            margin: 20px 0 10px;
            border-bottom: 2px solid #4CAF50;
            padding-bottom: 5px;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar li {
            margin-bottom: 10px;
        }

        .sidebar li a {
            text-decoration: none;
            color: #333;
            display: flex;
            align-items: center;
            padding: 8px;
            border-radius: 5px;
            transition: background-color 0.2s;
        }

        .sidebar li a:hover {
            background-color: #f0f0f0;
            color: #4CAF50;
        }

        .sidebar-icon {
            margin-right: 10px;
            font-size: 1.1em;
            display: flex;
            align-items: center;
        }

        /* Header and Breadcrumb */
        .header {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            font-size: 1.5em;
        }

        .breadcrumb {
            margin: 10px 0;
            font-size: 1.2em;
            color: #333;
        }
        .breadcrumb a {
            color: #4CAF50;
            text-decoration: none;
        }
        .breadcrumb a:hover {
            text-decoration: underline;
        }

        /* Table Styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
            text-align: left;
        }

        td {
            color: #555;
        }

        /* Footer Styling */
        .footer {
            background-color: #f2f2f2;
            padding: 10px;
            text-align: center;
            width: 100%;
            position: relative; /* Changed to relative */
            margin-top: auto; /* Ensure footer is at the bottom */
            box-sizing: border-box;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h2> <span class="sidebar-icon" style="display: inline-block; margin-right: 5px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1.5 2a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 0 1h-12a.5.5 0 0 1-.5-.5zm0 6a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 0 1h-12a.5.5 0 0 1-.5-.5zm0 6a.5.5 0 0 1 .5-.5h12a.5.5 0 0 1 0 1h-12a.5.5 0 0 1-.5-.5z"/>
            </svg>
        </span>Resources
    </svg>
        </span>

        </h2>
        <ul id="sidebar-resources"></ul>
    </div>

    <div class="sidebar-hover"></div>

    <div class="content">
        <div class="header">
            <span>File Browser</span>
        </div>

        <div class="breadcrumb">
            {% for part, link in breadcrumbs %}
                / <a href="{{ link }}">{{ part }}</a>
            {% endfor %}
        </div>

        <div id="content">{% block content %}{% endblock %}</div>
    </div>

    <footer class="footer">
        <div class="container">
            <span class="text-muted"> &copy;
                <span id="copyright">
                    <script>document.getElementById('copyright').appendChild(document.createTextNode(new Date().getFullYear()))</script>
                </span> Copyright:
                <a href="https://www.fortinet.com/" style="text-decoration:none; color: inherit">
                    <strong>www.fortinet.com</strong>
                </a> All Rights Reserved.
            </span>
        </div>
    </footer>

    <script>
        const resource = {
            "Automation Docs": "https://releaseqa-portal.corp.fortinet.com/static/docs/training/autolib_v3_docs/",
            "File Autolib Ticket": "https://app.clickup.com/2351733/v/li/901701749477",
            "Report Mantis": "https://mantis.fortinet.com/bug_report_page.php",
            "Go to Oriole": "https://oriole.fortinet.com/qatask/index.html",
            "Learn Regex": "https://app.clickup.com/2351733/v/dc/27rkn-1527/27rkn-2247",
        };

        function loadSidebarResources(resource) {
            const sidebarList = document.getElementById("sidebar-resources");

            Object.entries(resource).forEach(([description, link]) => {
                const listItem = document.createElement("li");
                const anchor = document.createElement("a");
                anchor.href = link;
                anchor.textContent = description;
                anchor.target = "_blank";
                anchor.rel = "noopener noreferrer";

                // Add icon span
                const icon = document.createElement("span");
                icon.className = "sidebar-icon";
                icon.innerHTML = '<svg rpl="" fill="currentColor" height="20" icon-name="topic-help-outline" viewBox="0 0 20 20" width="20" xmlns="http://www.w3.org/2000/svg"><path d="M9.45 13.95a1.033 1.033 0 0 1-.71-.29 1.014 1.014 0 0 1 0-1.42 1.033 1.033 0 0 1 1.409 0 1 1 0 0 1-.699 1.71Zm.689-9.9A4.987 4.987 0 0 0 7.111 5a.853.853 0 0 0-.1 1.313l.065.061a.832.832 0 0 0 1.085.026 2.987 2.987 0 0 1 1.752-.658c.8 0 1.245.371 1.245.9 0 .649-.331.94-1.059 1.351a2.772 2.772 0 0 0-1.333 1.481c-.058.14-.089.288-.093.439 0 .252.099.494.276.673a.89.89 0 0 0 .665.266.913.913 0 0 0 .661-.265.925.925 0 0 0 .227-.422c0-.006.046-.261.046-.267.095-.479.365-.733 1.141-1.134a2.452 2.452 0 0 0 1.562-2.29c-.001-1.405-1.1-2.424-3.112-2.424ZM13.376 16h2A4.626 4.626 0 0 0 20 11.379V5.621A4.626 4.626 0 0 0 15.379 1H4.621A4.626 4.626 0 0 0 0 5.621v5.758A4.626 4.626 0 0 0 4.621 16H7.5v-1.25H4.621a3.375 3.375 0 0 1-3.371-3.371V5.621A3.375 3.375 0 0 1 4.621 2.25h10.758a3.375 3.375 0 0 1 3.371 3.371v5.758a3.376 3.376 0 0 1-3.371 3.371h-2.5l-3.763 3.607.866.9L13.376 16Z"></path></svg>';

                anchor.prepend(icon);
                listItem.appendChild(anchor);
                sidebarList.appendChild(listItem);
            });
        }

        loadSidebarResources(resource);
    </script>

</body>
</html>
