                anchor.prepend(icon);
                listItem.appendChild(anchor);
                sidebarList.appendChild(listItem);
            });
        }

        loadSidebarResources(resource);
    </script>

    <!-- Right Side Controls Panel (Conditional for file viewing) -->
    {% if show_file_controls %}
    <div class="controls-panel-trigger"></div>

    <div class="file-controls-panel">
        <!-- File Info -->
        <div class="file-info-banner">
            <div class="file-info-item">
                <span class="file-info-label">File Size:</span>
                <span class="file-info-value">{{ "%.2f"|format(file_size / (1024 * 1024)) }} MB</span>
            </div>
            {% if total_lines %}
            <div class="file-info-item">
                <span class="file-info-label">Total Lines:</span>
                <span class="file-info-value">{{ "{:,}".format(total_lines) }}</span>
            </div>
            {% endif %}
            <div class="view-mode-badge">{{ view_mode }} mode</div>
        </div>

        <!-- Quick Actions -->
        <div class="controls-card">
            <h4>Quick Actions</h4>
            {{ quick_actions(path, view_mode|default('')) }}
        </div>

        <!-- Search -->
        <div class="controls-card">
            <h4>üîç Search in File</h4>
            {{ search_form(path, search_pattern|default(''), 'search-form') }}
        </div>

        <!-- Custom Range -->
        <div class="controls-card">
            <h4>üìä Custom Range</h4>
            {{ range_form(path, start_line|default(1), end_line|default(None), total_lines|default(None)) }}
        </div>

        <!-- Load More (for tail/head modes) -->
        {% if view_mode in ['tail', 'head'] %}
        <div class="controls-card">
            <h4>Load More</h4>
            {% if view_mode == 'tail' %}
                <a href="/__tail__?path={{ path }}&lines={{ num_lines + 1000 }}" class="btn btn-primary">
                    + 1000 More Lines
                </a>
            {% elif view_mode == 'head' %}
                <a href="/__head__?path={{ path }}&lines={{ num_lines + 1000 }}" class="btn btn-primary">
                    + 1000 More Lines
                </a>
            {% endif %}
        </div>
        {% endif %}
    </div>
    {% endif %}

